<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Model;

class Notification extends Model
{
    protected $table = 'notifications';
    protected $keyType = 'string'; // Since your id is CHAR(36)
    public $incrementing = false;  // UUIDs are not auto-incrementing
    protected $fillable = [
        'id',
        'type',
        'notifiable_type',
        'notifiable_id',
        'data',
        'read_at',
    ];

    protected $casts = [
        'data' => 'array', // Automatically decode JSON data
        'read_at' => 'datetime',
    ];
}